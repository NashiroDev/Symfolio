{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	Edit theme
{% endblock %}
{% block body %}
	<section class="container-fluid mt-4 small-height">
		<div class="p-3 form card w-50 mx-auto">
			<h1 class="card-title">Edit Theme</h1>
            {{ form_start(form) }}
            <div class="row mx-auto">
                <div class="col-md-6 mx-auto">{{ form_row(form.theme) }}</div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
            {{ form_end(form) }}
		</div>
	</section>
{% endblock %}
