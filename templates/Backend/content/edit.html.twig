{% extends "base.html.twig" %}

{% block title %}
	{{ parent() }}
	Update content
{% endblock %}

{% block body %}
	<section class="container-fluid mt-4 small-height">
		<div class="p-3 form card w-50 mx-auto">
			<h1 class="card-title">Update content</h1>
			{{ form_start(form) }}
			{{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.rowTheme) }}
           
            <button type="button" class="btn btn-primary btn-add-collection" data-collection-holder-class="files-input-list">Ajouter un fichier</button>
			<ul class="files-input-list mt-4" data-index="{{ form.files|length > 0 ? form.files|last.vars.name + 1 : 0 }}" data-prototype="{{ form_widget(form.files.vars.prototype)|e('html_attr') }}">
				{% for file in form.files %}
				<pre>
					{{ dump(file) }}
				</pre>
					<li>{{ form_row(file.file) }}
					{# {{ file.children.object.fileName }}</li> #}
				{% endfor %}
			</ul>
			<div class="text-center">
				<button type="submit" class="btn btn-primary">Update</button>
			</div>
            {{ form_widget(form._token) }}
			{{ form_end(form, {render_rest: false}) }}
		</div>
	</section>
{% endblock %}
